<h1>Signup!</h1>
<%= form_for :user, url: '/users' do |f| %>
  <% if @user.errors.any? %>
     <div class="error_messages">
       <h2>Form is invalid</h2>
       <ul>
         <% @user.errors.full_messages.each do |message| %>
           <li><%= message %></li>
         <% end %>
       </ul>
     </div>
   <% end %>

  <div class="field">
    Fist Name: <%= f.text_field :first_name, required: true %>
  </div>
  <div class="field">
    Last Name: <%= f.text_field :last_name %>
  </div>
  <div class="field">
    Email: <%= f.text_field :email, required: true  %>
  </div>
  <div class="field">
    Password: <%= f.password_field :password, required: true %>
  </div>
  <div class="field">
    Password Confirmation: <%= f.password_field :password_confirmation, required: true %>
  </div>
  <div class="actions"><%= f.submit "Sign Up" %></div>

<% end %>
