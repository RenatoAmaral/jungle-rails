<section class="admin-categories-index">

  <header class="page-header">
    <h1>Admin &raquo; All categories</h1>
  </header>

  <div class="well">
    <%= link_to 'All Categories', [:admin, :categories], class: 'btn btn-info' %>
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default category">
    <ul><h4>Categories Available</h4>
      <ul>
        <% Category.all.each do |category| %>
        <li><%= category.name%></li>
        <% end %>
      </ul>
    </ul>
  </div>
</section>
